    <Compile Include="..\..\ApiServer\ApiServer\StringExtensions.cs" Link="StringExtensions.cs" />
    <Compile Include="..\..\ApiServer\ApiServer\UrlGenerator.cs" Link="UrlGenerator.cs" />
    <Compile Include="..\..\ApiServer\ApiServer\Models\*.cs">
