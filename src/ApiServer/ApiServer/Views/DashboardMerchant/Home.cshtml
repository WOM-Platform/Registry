@model MerchantDashboardHomeViewModel
@{
    Layout = "Main";
    ViewData["Title"] = "Merchant dashboard";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-md-10 col-lg-8">
            <h1><span class="fas"></span>&nbsp;Merchant dashboard</h1>

            <p class="lead">Welcome, @Model.UserFullname.</p>
            <p>This dashboard allows you to manage the WOM&nbsp;Platform profile of merchant “<b>@Model.MerchantName</b>”.</p>

            <h2>Active Points of Service</h2>

            @if (Model.Pos.Any()) {
            <div class="list-group mt-4 mb-4">
            @foreach (var pos in Model.Pos) {
                <a href="#" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">@pos.Name</h5>
                </a>
            }
            </div>
            } else {
            <p class="text-muted">
                No active POS yet.
            </p>
            }

            <p>
                <a href="@Url.Action(nameof(DashboardMerchantController.AddNewPost), "DashboardMerchant")" class="btn btn-primary">
                    <span class="fas"></span>&nbsp;Add new POS
                </a>
            </p>

            <h3>Accept payments</h3>

            @if (Model.Pos.Any()) {
            <p>
                Please download one of the <b>WOM&nbsp;POS</b> apps using the links below, in order to start accepting payments.
            </p>

            <div class="row">
                <div class="col-6 badge">
                    <a href="https://play.google.com/store/apps/details?id=social.wom.pos" title="Download WOM POS from Google Play">
                        <img src="~/badge_google_play.png" alt="Google Play" />
                    </a>
                </div>
                <div class="col-6 badge">
                    <a href="https://apps.apple.com/it/app/wom-pos/id1468252634" title="Download WOM POS from App Store">
                        <img src="~/badge_app_store.png" alt="Apple App Store" />
                    </a>
                </div>
            </div>
            } else {
            <p>
                Please <a href="@Url.Action(nameof(DashboardMerchantController.AddNewPost), "DashboardMerchant")">create a new POS</a> in order to start accepting payments.
            </p>
            }
        </div>
    </div>
</div>
