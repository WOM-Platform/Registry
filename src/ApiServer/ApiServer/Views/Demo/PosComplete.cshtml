@{
    Layout = "Demo";
    ViewData["Title"] = "Demo Payment";
}

@section header {
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <img src="~/wom-logo.png" alt="WOM logo" class="img-fluid" />
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h1 class="display-3">Payment received</h1>

            <p class="lead">
                Payment received! Enjoy your discount of <b>@ViewBag.Amount%</b> on <b>@ViewBag.Item</b>!
            </p>

        </div>
    </div>
</div>
