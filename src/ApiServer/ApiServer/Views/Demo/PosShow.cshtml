@model DemoLinkViewModel
@{
    Layout = "Demo";
    ViewData["Title"] = "Demo Payment";
}

@section header {
<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <img src="~/wom-logo.png" alt="WOM logo" class="img-fluid" />
        </div>
    </div>
</div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h1 class="display-4">Payment</h1>

            <p class="lead">
                Payment requested!
            </p>

            <p>
                In order to perform the payment, please scan the QR&nbsp;Code below using the <b>WOM&nbsp;Pocket</b> application.
                Use the <i>PIN&nbsp;code</i> just below when the application asks for it.
            </p>

            <p class="text-center qrcode">
                <img src="@Url.Action(nameof(RenderController.QrCode), "Render", new { url = Model.OtcUrl })" alt="Code" class="img-fluid" />

                <h3>@Model.Password</h3>
            </p>

            <p>If you're on a mobile device, tap the button below to automatically proceed to payment.</p>

            <p class="text-center">
                <a class="btn btn-primary" href="wom://pay/@Model.Otc.ToString("N")" title="Perform payment using WOM Pocket">
                    Perform payment
                </a>
            </p>

        </div>
    </div>
</div>
